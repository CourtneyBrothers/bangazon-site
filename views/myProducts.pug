doctype html
html
  head
    title Add Payment Type
    include stylesheets.pug
  body
    include ./partials/nav.pug
    
  block content
    h2 My Products
    if products.length > 0
        each product in products
            h5 Product: #{product.product_name} 
            button(type="delete" id="paymentProductDelete" value="Delete") Delete
    else
        h2 You currently have no products listed.
