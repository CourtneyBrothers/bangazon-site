html
  head
    title Product Details
    include stylesheets.pug
  body
    include ./partials/nav.pug
    

    unless product
      h1 Sorry, no product with that ID!

    unless !product
      block content
        h1 Product Details
          h2 #{product.product_name}
          h4 #{product.description}
          h5 #{product.quantity}
          h5 #{product.price}

          if session.passport
            button#addToOrder add product to order



  script
      include ../node_modules/jquery/dist/jquery.min.js
      include ../client/product.js
